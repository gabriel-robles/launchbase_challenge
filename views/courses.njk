{% extends "layout.njk" %}

{% block head %}
    <title>Cursos - Rocketseat</title>
{% endblock %}

{% block content %}
    <div id="wrapper">
        <h1>Cursos</h1>
    </div>

    <section class="cards">

        {% for item in items %}
            <div class="card" id="{{item.id}}">
                <div class="card-image">
                    <img src="{{item.img_logo}}" alt="Curso {{item.name}}">
                </div>

                <div class="card-content">
                    <h3>{{item.name}}</h3>
                </div>

                <div class="card-info">
                    <p>{{item.modules}}</p>
                    <p>{{item.price}}</p>
                </div>
            </div>
        {% endfor %}

    </section>

    <script src="scripts.js"></script>
{% endblock %}